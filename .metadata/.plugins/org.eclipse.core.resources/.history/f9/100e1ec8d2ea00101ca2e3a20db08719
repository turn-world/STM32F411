#include "ap.h"


void cliBoot(cli_args_t *args);
// Cli로 boot 명령을 할 수 있도록

void apInit(void)
{
  cliOpen(_DEF_UART1, 57600);
}

void apMain(void)
{
  uint32_t pre_time;

  pre_time = millis();
  while(1)
  {
    if (millis()-pre_time >= 500)
    {
      pre_time = millis();
      ledToggle(_DEF_LED1);
    }

    cliMain();
  }
}

void cliBoot(cli_args_t *args)
{
	bool ret = false;


	if (ret != false)
	{
		cliPrintf("boot down_fw\n");
	}
	rerturn ret;
}
